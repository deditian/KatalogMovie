<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

  android:layout_marginLeft="15dp"
    android:layout_marginTop="10dp"
    >


    <LinearLayout
        android:id="@+id/base_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"


            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_poster_grid"
                android:layout_width="match_parent"
                android:layout_height="111dp"

                app:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/txt_title_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="6dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:fontFamily="sans-serif-condensed"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Title" />

            <TextView
                android:id="@+id/txt_overview_grid"
                android:layout_width="match_parent"
                android:paddingRight="3dp"
                android:layout_height="43dp"

                android:paddingLeft="3dp"
                android:fontFamily="sans-serif-condensed"
                android:textSize="16sp"

                tools:text="Overview" />

            <TextView
                android:id="@+id/txt_releasedate_grid"
                android:layout_width="match_parent"
                android:paddingRight="3dp"
                android:layout_height="wrap_content"
android:paddingLeft="3dp"

                android:fontFamily="sans-serif-condensed"
                android:textSize="16sp"

                tools:text="Release Date" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_detail_grid"
                    android:layout_width="73dp"
                    android:textColor="#fff"
                    android:background="#4ccfff"
                    android:layout_height="wrap_content"
                    android:text="@string/detail" />

                <Button
                    android:id="@+id/btn_share_grid"
                    android:layout_width="76dp"
                    android:textColor="#fff"
                    android:background="#4554ff"
                    android:layout_height="wrap_content"
                    android:text="@string/share" />

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>


